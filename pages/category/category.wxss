page {
  background: #f2f2f2;
}
.container{
  background: #f2f2f2;
}
.cate-nav{
    /* position: fixed; */
    left:0;
    top:0;
    z-index: 1000;
}

.cate-nav-body{
    height: 84rpx;
    white-space: nowrap;   
    background: #fff;
    /* border-top: 1px solid rgba(0,0,0,.15); */
    overflow: hidden;
}

.cate-nav .item{
    display: inline-block;
    height: 84rpx;
    min-width: 110rpx;
    /* padding: 0 15rpx; */
}

.cate-nav .item .name{
    display: block;
    height: 78rpx;
    padding: 0 20rpx;
    line-height: 84rpx;
    color: #333;
    font-size: 30rpx;
    width: auto;
}

.cate-nav .item.active .name{
    color: #0387FE;
    text-align: center;
    border-bottom: 6rpx solid #0387FE;
}

.cate-item{
    margin-top: 5rpx;
    height: auto;
    overflow: hidden;
}

.cate-item .h{
    height: 145rpx;
    width: 750rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.cate-item .h .name{
    display: block;
    height: 35rpx;
    margin-bottom: 18rpx;
    font-size: 30rpx;
    color: #333;
}

.cate-item .h .desc{
    display: block;
    height: 24rpx;
    font-size: 24rpx;
    color: #999;
}

.cate-item .b{
  width: 730rpx;
  padding: 10rpx;
  margin: 0 auto;
}

.cate-item .b .item{
  float: left;
  background: #fff;
  width: 358rpx;
  margin-bottom: 12.5rpx;
  padding-bottom: 10rpx;
  height: auto;
  overflow: hidden;
  text-align: center;
  border-radius: 20rpx;
}

.cate-item .b .item-b{
  margin-left: 12.5rpx;
}

.cate-item .item .img{
  width: 100%;
  height: 370rpx;
}

.cate-item .item .name{
  /* width: 365.625rpx; */
  height: 80rpx;
  margin: 11.5rpx 0 10rpx 0;
  text-align: center;
  padding: 0 10rpx;
  font-size: 30rpx;
  color: #333;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.cate-item .item .price{
  display: block;
  width: 365.625rpx;
  /* height: 30rpx; */
  text-align: center;
  font-size: 34rpx;
  color: #FF4500;
}

.loadmore {
  height: 100rpx;
  width: 100%;
  line-height: 80rpx;
  text-align: center;
  margin-top: 0rpx;
}

.loadmore text {
  color: #999;
}

@keyframes loading {
  0% {transform: rotate(0deg)}
  50% {transform: rotate(180deg)}
  100% {transform: rotate(360deg)}
}

.loading {
  display: inline-block;
  transform-origin: 50% 50%;
  animation: loading 1s linear infinite;
}
