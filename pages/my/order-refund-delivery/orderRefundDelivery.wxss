.stv-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #f4f4f4;
}

.goods-item {
  width: 710rpx;
  background-color: #fff;
  margin-top: 20rpx;
  margin-left: 20rpx;
  border-radius: 16rpx;
}


.delivery-item {
  width: 100%;
  margin-left: 30rpx;
  height: 60rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  font-weight: 700;
}

.goods-item  .a-goods {
  width: 100%;
  margin-left: 30rpx;
  display: flex;
  padding: 20rpx 0 30rpx 0;
}

.goods-item  .a-goods .img-box {
  width: 160rpx;
  height: 160rpx;
  overflow: hidden;
  margin-right: 20rpx;
}

.goods-item .img-box .img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
}

.goods-item  .a-goods .text-box {
  width: 480rpx;
  box-sizing: border-box;
  padding-top: 10rpx;
  position: relative;
}

.a-goods .text-box .arow {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.a-goods .text-box .arow .goods-name {
  width: 100%;
  font-size: 22rpx;
  color: #000;
}

.a-goods .text-box .arow01 {
  margin-bottom: 10rpx;
}

.a-goods .text-box .arow .goods-label {
  font-size: 20rpx;
  color: #999;
}

.a-goods .text-box .arow .goods-label-item {
  font-size: 22rpx;
  color: #000;
  align-self: flex-start;
  margin-top: 16rpx;
  margin-right: 18rpx;
}

.delivery-type {
  width: 710rpx;
  background-color: #fff;
  margin-top: 20rpx;
  /* position: absolute; */
  margin-left: 20rpx;
  border-radius: 16rpx;
}

.delivery-type .type-item {
  width: 100%;
  height: 80px;
  margin-bottom: 10px;
}

.service-type {
  width: 710rpx;
  background-color: #fff;
  margin-top: 20rpx;
  /* position: absolute; */
  margin-left: 20rpx;
  border-radius: 16rpx;
}

.service-type .type-item {
  width: 100%;
  height: 80px;
  margin-bottom: 10px;
}

.flex-row{
  width: 100%;
  height: 100%;
  display: -webkit-flex;
  display: -ms-flex;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  padding-left: 30rpx;
  padding-right: 30rpx;
  background-size: 28px 28px !important
}
.text{
  flex: 1;
  box-sizing: border-box;
  padding-left: 30rpx;
}
.text text{
  display: block;
}
.text .title{
  font-size: 30rpx;
  margin-bottom: 8px;
}
.text .sub-title{
  font-size: 22rpx;
  color: #999;
}

.fb-type{
  /* height: 104rpx; */
  background: #fff;
  /* margin-top: 30rpx; */
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
  
.fb-type .type-label{
  /* height: 36rpx; */
  flex: 1;
  color: #333;
  font-size: 28rpx;
  text-align: right;
  margin-right: 20rpx;
}
  
.fb-type .type-icon{
  height: 36rpx;
  width: 36rpx;
}

.delivery-com {
  display: flex;
  font-size: 30rpx;
  height: 90rpx;
  padding: 10rpx 30rpx;
}

.delivery-com .title {
  line-height: 90rpx; 
  width: 22%;
}

.delivery-com .name {
  line-height: 90rpx; 
  width: 76%;
  margin-left: 20rpx;
}

.deliveryNo {
  height: 90rpx;
  line-height: 90rpx;
  text-align: right;
  margin-right: 20rpx;
}

.fb-btn{
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  background: #0387FE;
  position: fixed;
  bottom: 0;
  left: 0;
  border-radius: 0;
  color: #fff;
  font-size: 36rpx;
}