.stv-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #f4f4f4;
  overflow-y: scroll;
  overflow-x: hidden;
}

.goods-item {
  width: 710rpx;
  background-color: #fff;
  margin-top: 20rpx;
  margin-left: 20rpx;
  border-radius: 16rpx;
}


.refund-item {
  width: 100%;
  margin-left: 30rpx;
  height: 60rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  font-weight: 700;
}

.goods-item  .a-goods {
  width: 100%;
  margin-left: 30rpx;
  display: flex;
  padding: 20rpx 0 30rpx 0;
}

.goods-item  .a-goods .img-box {
  width: 160rpx;
  height: 160rpx;
  overflow: hidden;
  margin-right: 20rpx;
}

.goods-item .img-box .img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
}

.goods-item  .a-goods .text-box {
  width: 480rpx;
  box-sizing: border-box;
  padding-top: 10rpx;
  position: relative;
}

.a-goods .text-box .arow {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.a-goods .text-box .arow .goods-name {
  width: 100%;
  font-size: 22rpx;
  color: #000;
}

.a-goods .text-box .arow01 {
  margin-bottom: 10rpx;
}

.a-goods .text-box .arow .goods-label {
  font-size: 20rpx;
  color: #999;
}

.a-goods .text-box .arow .goods-label-item {
  font-size: 22rpx;
  color: #000;
  align-self: flex-start;
  margin-top: 16rpx;
  margin-right: 18rpx;
}

.apply-num {
  height: 90rpx;
  line-height: 90rpx;
  border-top: 2rpx solid #eee;
  margin: 10rpx 20rpx 20rpx 30rpx;
}

.refund-info {
  width: 710rpx;
  background-color: #fff;
  margin-top: 20rpx;
  /* position: absolute; */
  margin-left: 20rpx;
  border-radius: 16rpx;
}

.refund-info .type-item {
  width: 100%;
  height: 100rpx;
  /* margin-bottom: 10px; */
}

.refund-info .flex-row{
  width: 100%;
  height: 100%;
  display: -webkit-flex;
  display: -ms-flex;
  display: flex;
  /* justify-content: center; */
  align-items: center;
  box-sizing: border-box;
  padding-left: 30rpx;
  padding-right: 30rpx;
  background-size: 28px 28px !important
}

.refund-info .type-item .flex-row .refund-col {
  width: 22%;
  font-size: 28rpx;
}

.refund-info .type-item .flex-row .select-col {
  width:80%;
  font-size: 28rpx;
  text-align: right;
  color: #999;
}

.refund-info .type-item .flex-row .select-col .refund-input {
  color: #FF7F00;
  font-size: 32rpx;
}

.type-item-remark {
  width: 100%;
}

.refund-remark {
  width: 100%;
  padding: 20rpx;
  height: 150rpx;
  background-color: #eee;
  margin: 30rpx 0;
}

.refund-remark .content {
  width: 610rpx;
  height: 120rpx;
  font-size: 24rpx;
}

.refund-remark .text-count {
  float: right;
  font-size: 28rpx;
}

.type-item-remark {
  width: 100%;
}

.padding{
  margin-bottom: 20rpx;
  font-size: 28rpx;
}
.padding .title{
  margin-bottom: 20rpx;
  font-size: 28rpx;
}


.image-input{
  display: flex;
  flex-wrap: wrap
}
.image-input .image-list{
  margin-right: 10rpx;
}
.image-input .up-img{
  width: 100rpx;
  height: 100rpx;
}
.image-input .add-image{
  width: 100rpx;
  height: 100rpx;
  padding: 10rpx;
  display: flex;
  justify-content: center;
  /* align-items: center; */
  border: 1px solid #ccc;
  border-radius: 5px;
  font-size: 50rpx;
  line-height: 100rpx;
  color: #999;
  margin-top: 10rpx;
}

.text{
  flex: 1;
  box-sizing: border-box;
  padding-left: 30rpx;
}
.text text{
  display: block;
}
.text .title{
  font-size: 30rpx;
  margin-bottom: 8px;
}
.text .sub-title{
  font-size: 22rpx;
  color: #999;
}

.submit {
  width: 92%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 36rpx;
  color: #fff;
  background-color: #0387FE;
}

.cancel-list {
  width: 690rpx;
  font-size: 28rpx;
  margin: 30rpx;
  font-weight: bold;
}